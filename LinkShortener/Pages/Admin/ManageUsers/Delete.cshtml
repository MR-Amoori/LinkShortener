@page
@model CoverLandShop.Pages.Admin.ManageUsers.DeleteModel

@{
    ViewData["Title"] = "حذف کاربر";
}


<h3>آیا از حذف @Model.Users.UserName مطمئن هستید؟</h3>
<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.Password)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Users.IsAdmin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Users.IsAdmin)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Users.UserId" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-page="./Index" class="btn btn-primary">بازگشت</a>
    </form>
</div>
