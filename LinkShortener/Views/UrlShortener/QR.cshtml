@section styles{
    <style>


        div.polaroid {
            width: 100%;
            background-color: white;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            margin-bottom: 10px;
        }

        div.container {
            text-align: center;
            padding: 10px 10px;
        }
    </style>
}

@if (!string.IsNullOrEmpty(ViewBag.QrCode))
{


    <div class="polaroid">
        <div class="container">
            <p>عکس QR CODE سایت @ViewBag.Name</p>
        </div>
        <img src="@ViewBag.QrCode" alt="Qr">
        <br />
        <a href="/" class="btn btn-dark m-3">بازگشت</a>
        <br />

    </div>

}